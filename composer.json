{
    "name": "fccn/webapp-tools-web-components",
    "description": "Collection of twig templates with web utilities",
    "keywords": ["fccn", "webapp-tools", "twig", "utilities"],
    "license": "MIT",
    "authors": [
        {
            "name": "Paulo Costa",
            "email": "paulo.costa@fccn.pt"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "fccn/webapp-tools-common": "^1.0",
        "fccn/webapp-tools-translate": "^1.0"
    },
    "autoload":{
      "psr-4": {
        "Fccn\\Lib\\": "app/lib",
        "Fccn\\WebComponents\\": "app/component"
      }
    },
    "require-dev": {
        "codeception/codeception": "^2.3",
        "slim/slim": "^3.9",
        "herloct/codeception-slim-module": "^1.1"
    },
    "autoload-dev": {
        "psr-4": {
            "Fccn\\Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "test": "codecept run"
    }

}
